<div id="reg-forms">
  <form id="login_user_form" action="/sessions/login" method="POST">
    <input type="text" name="user[email]" placeholder="EMAIL"/>
    <input type="password" name="user[password]" placeholder="PASSWORD"/>
    <input type="submit" id="submit-btn" />
  </form>
  <form id="register_new_user_form" action="/users" method="POST">
  	 <input type="text" name="user[username]" placeholder="Enter Email">
  	 <input type="password" name="user[password]" placeholder="Enter Password">
  	 <input type="password" name="password_confirmation" placeholder="Confirm Password">
  	 <input id="submit-btn" type="submit">
  </form>
</div>

<%if @errors%>
   <span><%=@errors%>, Please Try Again (or Register)</span>
<%end%>
